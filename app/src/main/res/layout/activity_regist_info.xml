<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yellow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/upload_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/student_picture1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upload_img"
                android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/take_photo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="点我上传照片"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"

                android:gravity="fill_vertical"
                android:textColor="#232121"/>
            <Button
                android:id="@+id/choose_from_album"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="从相册选择"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:gravity="fill_vertical"
                android:textColor="#232121"
                />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
     android:orientation="horizontal"
       >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:text="姓名:"
         android:textColor="#503f3f"
         android:textSize="20dp"
         />
     <EditText
         android:id="@+id/edt_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="5"
         android:hint="未设置"
         android:background="#FFF"
         android:alpha="0.8"
         android:textAlignment="textStart"
         />

 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:id="@+id/nick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#503f3f"
            android:text="昵称:"

            />
        <EditText
            android:id="@+id/edt_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#FFF"
            android:alpha="0.8"
            android:hint="未设置"
            android:textAlignment="textStart"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:text="生日:"
            android:textColor="#503f3f"

            />
        <EditText
            android:id="@+id/edt_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="未设置"
            android:textAlignment="textStart"
            android:background="#FFF"
            android:alpha="0.8"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#503f3f"
            android:text="学号/工号:"
            />
        <EditText
            android:id="@+id/edt_studentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="未设置"
            android:background="#FFF"
            android:alpha="0.8"
            android:textAlignment="textStart"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="所在学校及院系:"
            android:textSize="20dp"
            android:textColor="#503f3f"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/edt_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="未设置"
            android:background="#FFF"
            android:alpha="0.8"
            android:textAlignment="textStart"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="性别:"
            android:layout_weight="1"
            android:textColor="#503f3f"
            android:gravity="center"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5">
            <RadioGroup
                android:id="@+id/sex"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RadioButton
                    android:id="@+id/rbtn_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="男"
                    />
                <RadioButton
                    android:id="@+id/rbtn_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="女"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="身份:"
            android:layout_weight="1"
            android:textColor="#503f3f"
            android:gravity="center"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        <RadioGroup
            android:id="@+id/identity"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <RadioButton
                android:id="@+id/rbtn_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我是学生"
                />
            <RadioButton
                android:id="@+id/rbtn_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我是老师"
                />
        </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="保存"
            android:id="@+id/save_regist_info"
            android:textSize="20sp"
            android:onClick="onClick"
            />
    </LinearLayout>


</LinearLayout>